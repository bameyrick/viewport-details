{
  "name": "viewport-details",
  "version": "2.0.0",
  "description": "Get viewport information",
  "author": "Ben Meyrick <bameyrick@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": ["viewport", "details", "vh"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bameyrick/viewport-details.git"
  },
  "scripts": {
    "build": " yarn lint && tsc -p tsconfig.json --outDir dist/",
    "test": "KARMA_SINGLE_RUN=false karma start ./karma.conf.js",
    "test-single": "yarn tidy-clean && yarn lint && yarn karma start ./karma.conf.js",
    "lint": "tslint --project tsconfig.lint.json",
    "tidy-clean": "rm -rf dist coverage",
    "postinstall": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": ["yarn lint", "prettier --print-width 140 --single-quote --trailing-comma es5 --parser typescript --write", "yarn test-single"],
    "*.json": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser json --write"]
  },
  "devDependencies": {
    "@types/jasmine": "^3.6.9",
    "codecov": "^3.8.1",
    "husky": "^7.0.0",
    "jasmine-core": "^3.7.1",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.5.1",
    "karma-viewport": "^1.0.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "puppeteer": "^8.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  }
}
